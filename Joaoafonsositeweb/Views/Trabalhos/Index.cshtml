@model IEnumerable<Trabalhos>


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lista de Trabalhos</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Trabalhos" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-plus-circle-fill"></i> Criar Novo Trabalho
                </a>
            </div>
        </div>



        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Tipo</th>
                    <th>Descricao</th>
                    <th>Tamanho</th>
                    <th>SoftwareUsado</th>
                    <th>Duracao</th>
                    <th>Imagem</th>
                    <th></th>
                </tr>

            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Nome</td>
                        <td>@obj.Tipo</td>
                        <td>@obj.Descricao</td>
                        <td>@obj.Tamanho</td>
                        <td>@obj.SoftwareUsado</td>
                        <td>@obj.Duracao</td>
                        <td>@obj.Imagem</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Trabalhos" asp-action="Editar" asp-route-trabalhoId="@obj.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a asp-controller="Trabalhos" asp-action="Apagar" asp-route-trabalhoId="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Apagar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


