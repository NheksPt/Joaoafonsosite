@model Joaoafonsosite.Domain.Entities.Trabalhos

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar Trabalhos</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="Nome" class="form-control border shadow" />
                    <label asp-for="Nome" class="ms-2"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Tipo" class="form-control border shadow" />
                    <label asp-for="Tipo" class="ms-2"></label>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Descricao" class="form-control border shadow" />
                    <label asp-for="Descricao" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Tamanho" class="form-control border shadow" />
                    <label asp-for="Tamanho" class="ms-2"></label>
                    <span asp-validation-for="Tamanho" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SoftwareUsado" class="form-control border shadow" />
                    <label asp-for="SoftwareUsado" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Duracao" class="form-control border shadow" />
                    <label asp-for="Duracao" class="ms-2"></label>
                    <span asp-validation-for="Duracao" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Imagem" class="form-control border shadow" />
                    <label asp-for="Imagem" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i>Editar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i>Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
